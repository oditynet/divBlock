{
  "manifest_version": 2,
  "name": "Element Blocker Pro", 
  "version": "1.0",
  "description": "Блокировка элементов с визуальным выбором и подсчетом",
  
  "permissions": [
    "activeTab", 
    "storage",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Element Blocker",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png", 
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
